# Environment variables for MonadicPipeline
# Copy this file to .env and customize for your environment

# ==========================================
# LLM Provider Configuration
# ==========================================

# Ollama Configuration (for local deployment)
PIPELINE__LlmProvider__OllamaEndpoint=http://localhost:11434
PIPELINE__LlmProvider__DefaultChatModel=llama3
PIPELINE__LlmProvider__DefaultEmbeddingModel=nomic-embed-text
PIPELINE__LlmProvider__RequestTimeoutSeconds=180

# OpenAI Configuration (alternative to Ollama)
# PIPELINE__LlmProvider__DefaultProvider=OpenAI
# PIPELINE__LlmProvider__OpenAiApiKey=sk-your-api-key-here
# PIPELINE__LlmProvider__OpenAiModel=gpt-4

# Azure OpenAI Configuration
# PIPELINE__LlmProvider__DefaultProvider=Azure
# PIPELINE__LlmProvider__AzureOpenAiEndpoint=https://your-resource.openai.azure.com/
# PIPELINE__LlmProvider__AzureOpenAiApiKey=your-azure-api-key
# PIPELINE__LlmProvider__AzureOpenAiDeploymentName=gpt-4

# ==========================================
# Vector Store Configuration
# ==========================================

# In-Memory Vector Store (development)
PIPELINE__VectorStore__Type=InMemory

# Qdrant Vector Store (production)
# PIPELINE__VectorStore__Type=Qdrant
# PIPELINE__VectorStore__ConnectionString=http://localhost:6333
# PIPELINE__VectorStore__DefaultCollection=pipeline_vectors

# Pinecone Vector Store (alternative)
# PIPELINE__VectorStore__Type=Pinecone
# PIPELINE__VectorStore__ApiKey=your-pinecone-api-key
# PIPELINE__VectorStore__Environment=us-west1-gcp
# PIPELINE__VectorStore__IndexName=monadic-pipeline

# ==========================================
# Execution Configuration
# ==========================================

PIPELINE__Execution__MaxTurns=5
PIPELINE__Execution__MaxParallelToolExecutions=10
PIPELINE__Execution__EnableDebugOutput=false
PIPELINE__Execution__ToolExecutionTimeoutSeconds=60

# ==========================================
# Observability Configuration
# ==========================================

PIPELINE__Observability__EnableStructuredLogging=true
PIPELINE__Observability__MinimumLogLevel=Information
PIPELINE__Observability__EnableMetrics=false
PIPELINE__Observability__EnableTracing=false

# OpenTelemetry Configuration
# PIPELINE__Observability__OpenTelemetryEndpoint=http://localhost:4317
# PIPELINE__Observability__MetricsExportEndpoint=/metrics

# Application Insights (Azure)
# PIPELINE__Observability__ApplicationInsightsConnectionString=InstrumentationKey=your-key-here

# ==========================================
# Environment Configuration
# ==========================================

ASPNETCORE_ENVIRONMENT=Development
DOTNET_ENVIRONMENT=Development

# ==========================================
# Docker Compose Specific
# ==========================================

# These are used by docker-compose.yml
# COMPOSE_PROJECT_NAME=monadic-pipeline
# COMPOSE_FILE=docker-compose.yml

# ==========================================
# Kubernetes Specific
# ==========================================

# These are typically managed in ConfigMaps/Secrets
# but can be set here for testing
# K8S_NAMESPACE=monadic-pipeline
