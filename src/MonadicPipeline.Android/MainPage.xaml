<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonadicPipeline.Android.MainPage"
             BackgroundColor="#1E1E1E">

    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Label Grid.Row="0"
               Text="MonadicPipeline CLI"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="#00FF00"
               HorizontalOptions="Center"
               Margin="0,10,0,10" />

        <!-- Output Area (ScrollView with Label) -->
        <ScrollView Grid.Row="1" 
                    x:Name="OutputScrollView"
                    BackgroundColor="#000000"
                    Margin="0,10,0,10">
            <Label x:Name="OutputLabel"
                   Text="MonadicPipeline CLI&#x0a;Type 'help' to see available commands&#x0a;&#x0a;> "
                   FontFamily="Courier New"
                   FontSize="12"
                   TextColor="#00FF00"
                   BackgroundColor="#000000"
                   Padding="10"
                   LineBreakMode="WordWrap" />
        </ScrollView>

        <!-- Input Area -->
        <Grid Grid.Row="2" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Entry Grid.Column="0"
                   x:Name="CommandEntry"
                   Placeholder="Enter command..."
                   PlaceholderColor="#808080"
                   TextColor="#00FF00"
                   BackgroundColor="#000000"
                   FontFamily="Courier New"
                   Completed="OnCommandEntered"
                   ReturnType="Done" />

            <Button Grid.Column="1"
                    Text="Execute"
                    BackgroundColor="#00AA00"
                    TextColor="#FFFFFF"
                    Clicked="OnExecuteClicked"
                    WidthRequest="100" />
        </Grid>
    </Grid>

</ContentPage>
