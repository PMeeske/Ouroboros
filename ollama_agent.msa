!(import! &self motto)
!(import! &self ollama_agent)

; This script defines a custom agent behavior using the Ollama backend.
; It is intended to be called via:
; !((ollama-agent "llama3") (Script "ollama_agent.msa") (user "Your message"))

(= (response)
   ((ollama-agent "llama3")
    (Messages
      (system "You are a helpful assistant running on a local Ollama model.")
      (messages)
    )
   )
)
